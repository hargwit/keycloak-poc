{
    "name": "keycloak-poc",
    "version": "1.0.0",
    "description": "A POC for keycloak with a react app",
    "main": "dist/index.js",
    "scripts": {
        "dev:server": "nodemon -e ts -w src/server --exec ts-node ./src/server/index.ts",
        "dev:app": "nodemon -e ts -w src/app --exec ts-node ./src/app/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint . --ext .ts",
        "format": "eslint . --ext .ts --fix && prettier 'src/**/*.{json,ts}' --write",
        "test": "echo 'no tests yet'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hargwit/ts-template.git"
    },
    "keywords": [
        "typescript",
        "template"
    ],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/hargwit/ts-template/issues"
    },
    "homepage": "https://github.com/hargwit/ts-template#readme",
    "devDependencies": {
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.11.7",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "lint-staged": "^12.0.2",
        "nodemon": "^2.0.15",
        "prettier": "^2.4.1",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged",
            "pre-push": "npm run lint && npm run test"
        }
    },
    "lint-staged": {
        "**/*.ts": [
            "eslint --fix"
        ],
        "**/*.{json,ts}": [
            "prettier --write"
        ]
    }
}
